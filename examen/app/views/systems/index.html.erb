<p id="notice"><%= notice %></p>


<div class="master-container">
  <h1 class="titles">Sistemas Solares</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Planets</th>
        <th>Moons</th>
        <th>Stars</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @systems.each do |system| %>
        <tr>
          <td><%= system.name %></td>
          <td><%= system.planets %></td>
          <td><%= system.moons %></td>
          <td><%= system.stars %></td>
          <td class="url-links"><%= link_to 'Show', system %></td>
          <td class="url-links"><%= link_to 'Edit', edit_system_path(system) %></td>
          <td class="url-links"><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="new-system">
  <%= link_to 'New System', new_system_path %>
</div>